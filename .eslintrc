{
  "extends": ["squarespace/vanilla"],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "plugins": [
  ],
  "globals": {
    "__DEV__": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.prod.js"
      }
    }
  },
  "rules": {
    "no-var": "error",
    "prefer-const": "warn"
  }
}
